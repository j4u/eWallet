<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component' xmlns:m="urn:import:gwt.material.design.client.ui"
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<div class="image-container set-full-height">
			<div class="container">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<!-- Wizard container -->
						<div class="wizard-container">
							<div class="card wizard-card ct-wizard-green">
								<div class="wizard-header">
									<h3>
										Empire Wifi Payments
										<br />
									</h3>
								</div>

								<ul class="nav nav-pills">
									<li class="active" style="width: 33.3333333333333%;"
										ui:field="liPackage">
										<a href="#package" data-toggle="tab">1 - Package Info</a>
									</li>
									<li style="width: 33.3333333333333%;" ui:field="liPayment">
										<a href="#payment" data-toggle="tab">2 - Payment</a>
									</li>
									<li style="width: 33.3333333333333%;" ui:field="liComplete">
										<a href="#complete" data-toggle="tab">3 - Complete</a>
									</li>
								</ul>

								<!-- Tab Content 1 -->
								<div class="tab-content">
									<div class="tab-pane active" ui:field="divPackage">
										<div class="row">
											<div class="col-sm-12">
												<h4 class="info-text">Fill In Below Details:</h4>
											</div>

											<div class="col-md-12">
												<hr />
												<form class="form-horizontal">
													<div class="form-group">
														<label for="lastname" class="col-sm-6 control-label">Account Number:</label>
														<div class="col-sm-6">
															<g:TextBox ui:field="txtAccount" styleName="form-control"></g:TextBox>
														</div>
													</div>

													<div class="form-group">
														<label for="firstname" class="col-sm-6 control-label">Select Package:</label>
														<div class="col-sm-6">
															<d:DropDownList ui:field="lstPackages">
															</d:DropDownList>
														</div>
													</div>

													<div class="form-group">
														<label for="lastname" class="col-sm-6 control-label">Months:</label>
														<div class="col-sm-6">
															<g:TextBox ui:field="txtMonth" styleName="form-control"></g:TextBox>
														</div>
													</div>

													<div class="form-group">
														<label for="lastname" class="col-sm-6 control-label">Amount:</label>
														<div class="col-xs-6">
															<g:TextBox ui:field="txtAmount" styleName="form-control"></g:TextBox>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>

									<div class="tab-pane" ui:field="divPayment">
										<div class="row">
											<div class="col-sm-12">
												<h4 class="info-text">Submit Payment:</h4>
											</div>
											<div class="col-md-12">
												<g:Frame ui:field="framePayment" height="100%" width="100%"></g:Frame>
											</div>
										</div>
									</div>

									<div class="tab-pane" ui:field="divComplete">
										<div class="row">
											<div class="col-sm-12">
												<h4 class="info-text">Status:</h4>
											</div>

											<div class="alert alert-danger" role="alert">
												Your payment has
												successfully been received!
											</div>
										</div>
									</div>
								</div>
								<div class="wizard-footer">
									<div class="pull-right">
										<g:Anchor
											styleName='btn btn-next btn-fill btn-success btn-wd
										btn-sm'
											ui:field="aNext">Proceed
										</g:Anchor>
									</div>
									<div class="pull-left">
										<g:Anchor
											styleName='btn btn-previous btn-fill btn-default btn-wd btn-sm'
											ui:field="aBack">Back
										</g:Anchor>
									</div>

									<div class="clearfix"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>